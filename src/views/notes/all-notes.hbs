<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fa-regular fa-pen-to-square"></i> </a>
                </h4>
                <p>
                    {{description}}
                </p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="method" value="DELETE">
                    <button class="btn btn-danger btn-sm col-12" type="submit"> Delete </button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <!-- mx-auto centra la card o el div el cual tenga dicha clase. -->
    <div class="card mx-auto col-3">
        <div class="card-body">
            <h1>Hola {{user.name}}</h1>
            <p class="lead"> No hay notas a√∫n.</p>
            <a href="/notes/add" class="btn btn-success col-12"> Crea una!</a>
        </div>
    </div>
    {{/each}}
</div>